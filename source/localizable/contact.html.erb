<%= t(:contactmessage) %>
<div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
  <form action="#">
    <div class="formgroup form-row">
      <div class="form-column col-md-6">
        <label for="first_name">First name</label>
        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control">
      </div>
      <div class="form-column col-md-6">
        <label for="last_name">Last name</label>
        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control">
      </div>
    </div>
    <div class="formgroup form-row">
      <div class="col-md-12">
        <label for="contactmessage">Message</label>
        <input type="text" id="contactmessage" name="contactmessage" placeholder="e.g: Is it still available the 3rd week of July?" class="form-control">
        <input type="submit" value="submit" class="form-control">
      </div>
    </div>
  </form>
</div>
