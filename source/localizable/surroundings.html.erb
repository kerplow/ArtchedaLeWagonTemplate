<!-- multiple tabs: 1 for the local stuff, one for the general environment ("a day out, on fait la journÃ©e, een dag eropuit") -->
<!-- make the map also show markers of things to do nearby, and, when clicked, show estimated travel time and link to public transportation website with search query filled in -->
<div class="map-container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-md-2">
      <div class="map-tab">
        <h5><%= t(:short_leave) %></h5>
      </div>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-2">
      <div class="map-tab">
        <h6><%= t(:day_leave) %></h6>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <div
      id="map"
      style="width: 100%;
      height: 600px;"
      ></div>
    </div>
    <div class="col-xs-12 col-md-4">
      <div id="marker-description">
      </div>
    </div>
  </div>
</div>
<!--split-->
<script>
  function initMap() {
    var artcheda = {lat: 43.6849591, lng: 7.091228900000033};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 11,
      center: artcheda
    });
    var marker = new google.maps.Marker({
      position: artcheda,
      map: map
    });
  }
</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkkxgLijXfu6o2x85SA7PQKLvBUF_emLY&callback=initMap">
</script>
